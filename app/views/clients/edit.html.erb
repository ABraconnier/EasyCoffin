<div class="container">
  <h1 class="mt-3 ml-3" id="h2-banner">Your Client Dashboard</h1>
  <div class="row">
    <div class="col-3 mt-3 card">
      <div class="text-center">
        <h2>Your profile</h2>
        <p>Update your data if needed</p>
      </div>
    <%= simple_form_for @client do |f| %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :account_number %>
      <div class="text-center">
        <%= f.button :submit, "Update profile", class: "btn btn-secondary btn-lg", id: "client-btn" %>
      </div>
    <% end %>
    </div>
    <div class="col-9 mt-3">
      <div class="card-category">
        <div class="d-flex align-items-end">
          <%= link_to 'See all mourners available', mourners_path, style: "margin-bottom: 10px;", id: "client-link" %>
        </div>
        <div class="card-background" style="background-image: url('<%= image_path("mourning_ladies.svg") %>')" ></div>
      </div>
      <h1 class="mt-4" id="h2-banner" style="font-size: 35px">Reservation History</h1>
      <div class="card">
​
        <div style="text-align: center">
        <img src="https://media.giphy.com/media/3o7buagJzUFQWpb2PC/giphy.gif" style="width: 30%">
        <p>No reservation done yet...</p>
        <%= link_to 'Hire a professional mourner !', mourners_path, class: "btn btn-secondary btn-lg", id: "client-btn" %>
​
        <div class="prestations">
        <% @prestations.each do |prestation| %>
        <p>Find your prestations requests to our mourner(s) below</p>
          <div class = "prestation">
            <div class="mourner_info">
              <%= prestation.mourner.first_name %>
              <%= prestation.mourner.last_name %>
              <%= prestation.mourner.email %>
              <%= prestation.mourner.rating %>
              <%= prestation.mourner.age %>
              <%= prestation.mourner.years_of_expertise %>
              <%= prestation.mourner.mourning_intensity %>
              <%= prestation.mourner.price_range %>
              <%= cl_image_tag prestation.mourner.photo %>
            </div>
            <div class="prestation_info">
              <%= prestation.location %>
              <%= prestation.date %>
              <%= prestation.price %>
              <%= prestation.intensity %>
              <% case prestation.status %>
              <% when 0 %>
              <%= "pending" %>
              <% when 1 %>
              <%= "done" %>
              <% when 2 %>
              <%= "canceled" %>
              <% end %>
            </div>
            <div class="btn btn-secondary">
              <%= link_to "Cancel", mourner_prestation_path(prestation.mourner, prestation), method: :delete, :data => {:confirm => "You Sure?"} %>
            </div>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
