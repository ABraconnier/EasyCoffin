<div class="container">
  <div class="row justify-content-center">
    <div class="col">
      <div class="row justify-content-center mt-5">
      <h1>Here are the best mourners ever !</h1>
      </div>
        <div class="active-purple-4 mb-4 d-flex flex-column align-items-center mt-5">
          <%= form_tag mourners_path, method: :get do %>
            <%= label_tag(:location, "City(in a 300km range): ") %>
            <%= text_field_tag :location,
                params[:location],
                class: "form-control"
              %>
           <%= label_tag(:price, "Maximum price:") %>
           <%= number_field_tag :price,
            params[:price],
            class: "form-control"
            %>
                <%= submit_tag "Search", class: "btn btn-secondary btn-lg mt-3", id: "client-btn" %>
              <% end %>
              </div>

            </div>
          </div>
        </div>

        <div class="container space-between d-flex flex-row align-items-start justify-content-between">
          <div class="col-6 ml-3">
            <div class="test666">
              <% @mourners.each do |mourner|%>
                <div class="card-product row">
                  <%= cl_image_tag mourner.photo %>
                  <div class="card-product-infos">
                    <p><strong><%= mourner.first_name %></strong></p>
                    <p><strong><%= mourner.last_name %></strong></p>
                    <p><%= link_to "See profile", mourner_path(mourner)%></p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
            <div class="d-flex justify-content-center">
                <div
              id="map"
              style="
              margin-top: 35px;
              width: 35vw;
              height: 80vh;
              grid-template-columns: 1fr;
              position: sticky;"
              data-markers="<%= @markers.to_json %>"
              data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
            ></div>
          </div>
        </div>
      </div>
  </div>
</div>
