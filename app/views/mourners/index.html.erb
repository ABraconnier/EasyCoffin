<div class="container">
  <div class="row justify-content-center">
    <div class="col">
      <div class="row justify-content-center">
      <h1>Here are the best mourners ever !</h1>
      </div>

<div class="active-purple-4 mb-4">
  <%= form_tag mourners_path, method: :get do %>
    <%= label_tag(:location, "City(in a 300km range): ") %>
    <%= text_field_tag :location,
        params[:location],
        class: "form-control"
      %>
</div>
<div class="active-purple-4 mb-4">
   <%= label_tag(:price, "Maximum price:") %>
   <%= number_field_tag :price,
    params[:price],
    class: "form-control"
    %>
</div>

        <%= submit_tag "Search", class: "btn btn-secondary btn-lg", id: "client-btn" %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="test666">
    <% @mourners.each do |mourner|%>
      <div class="card-product row">
        <%= cl_image_tag mourner.photo %>
        <div class="card-product-infos">
          <p><strong><%= mourner.first_name %></strong></p>
          <p><strong><%= mourner.last_name %></strong></p>
          <p><%= link_to "see profile", mourner_path(mourner)%></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div
  id="map"
  style="width: 25%;
  height: 300px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

